<%- include ('partials/header.ejs') %>
    <%- include ('partials/menu-navbar.ejs') %>


        <div class="cadastro">
            <h1>Cadastro</h1>
            <div class="dono">
                <form action="/cadastrar/new" method="POST" enctype="multipart/form-data">
                    <div class="container-cat">
                        <div class="gato">
                            <div class="info-cat">
                                <h2>Detalhes Básicos | Gato</h2>
                                <div class="input">
                                    <label>Nome</label>
                                    <input type="text" name="nomeGato" placeholder="Digite o Nome" required>
                                </div>
                                <div class="input">
                                    <label>Idade Estimada</label>
                                    <input type="text" name="idadeGato" placeholder="Digite a idade" required>
                                </div>
                                <label for="cat-gender">Sexo</label>
                                <select id="cat-gender" name="sexoGato" required>
                                    <option value="" disabled selected>Selecione</option>
                                    <option value="male">Macho</option>
                                    <option value="female">Fêmea</option>
                                </select>
                            </div>
                            <div class="upload-file">
                                <div class="upload-image" onclick="document.getElementById('file-upload').click();">
                                    <img src="/cadastro/img/ion_camera.svg" alt="Camera Icon">
                                    <input type="file" id="file-upload" name="file">
                                </div>
                                <div class="upload-container">
                                    <script>
                                        document.querySelector('.upload-container').addEventListener('click', function() {
                                            document.getElementById('file-upload').click();
                                        });
                                    </script>
                                    <div class="container-img">
                                        <img src="/cadastro/img/arquivos.svg" alt="Upload Icon" class="upload-icon">
                                        <input type="file" id="file-upload" name="file">
                                        <label for="file-upload" class="upload-button">Upload</label>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="dono-section">
                            <h2>Detalhes Básicos | Dono</h2>
                            <div class="dono">
                                <div class="input">
                                    <label>Nome</label>
                                    <input type="text" name="nomeDono" placeholder="Digite o Nome" required>
                                    <label for="state">Estado</label>
                                    <select id="state" name="estadoDono" required>
                                        <option value="" disabled selected>Selecione</option>
                                        <option value="SP">SP</option>
                                        <option value="RJ">RJ</option>
                                        <option value="MG">MG</option>
                                        <option value="RS">RS</option>
                                        <option value="AC">AC</option>
                                        <option value="MA">MA</option>
                                    </select>
                                    <label for="city">Cidade</label>
                                    <select id="city" name="cidadeDono" required>
                                        <option value="" disabled selected>Selecione</option>
                                        <option value="Registro">Registro</option>
                                        <option value="Cajati">Cajati</option>
                                        <option value="Americana">Americana</option>
                                        <option value="São Miguel do Arcanjo">São Miguel do Arcanjo</option>
                                        <option value="Parati">Parati</option>
                                    </select>
                                </div>
                                <div class="contact">
                                    <div class="input">
                                        <label>Contato</label>
                                        <input type="email" name="emailDono" placeholder="Digite o Email" required>
                                        <input type="text" name="telefoneDono" placeholder="Digite o Telefone" required>
                                        <input type="text" name="enderecoDono" placeholder="Digite o Endereço" required>
                                    </div>
                                </div>
                            </div>
                            <button type="submit" class="btn-submit">Salvar e Continuar</button>
                        </div>
                    </div>
                </form>
                
                
            </div>
        </div>
        </div>

        