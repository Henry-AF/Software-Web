<%- include ('partials/header.ejs') %>
    <%- include ('partials/menu-navbar.ejs') %>


        <div class="cadastro">
            <h1>Cadastro</h1>
            <div class="dono">
                <form action="" method="POST" enctype="multipart/form-data">
                    <div class="container-cat">
                        <div class="gato">
                            <h2>Detalhes Básicos | Gato</h2>

                            <div class="input">
                                <label>Nome</label>
                                <input type="text" placeholder="Digite o Nome" name="nomeGato">
                            </div>
                            <div class="input">
                                <label>Idade Estimada</label>
                                <input type="text" placeholder="Digite a idade" name="idadeGato">
                            </div>
                            <label for="cat-gender">Sexo</label>
                            <select id="cat-gender" name="sexoGato">
                                <option value="" disabled selected>Selecione</option>
                                <option value="male">Macho</option>
                                <option value="female">Fêmea</option>
                            </select>

                        </div>
                        <h2>Detalhes Básicos | Dono</h2>
                        <div class="dono">
                            <div class="input">
                                <label>Nome</label>
                                <input type="text" placeholder="Digite o Nome" required name="nomeDono">
                                <label for="state">Estado</label>
                                <select id="state" name="estadoDono">
                                    <option value="" disabled selected>Selecione</option>
                                    <option value="SP">SP</option>
                                    <option value="RJ">RJ</option>
                                    <option value="MG">MG</option>
                                    <option value="RS">RS</option>
                                    <option value="AC">AC</option>
                                    <option value="MA">MA</option>
                                </select>
                                <label for="city">Cidade</label>
                                <select id="city" name="cidadeDono">
                                    <option value="" disabled selected>Selecione</option>
                                    <option value="Registro">Registro</option>
                                    <option value="Cajati">Cajati</option>
                                    <option value="Americana">Americana</option>
                                    <option value="São Miguel do Arcanjo">São Miguel do Arcanjo</option>
                                    <option value="Parati">Parati</option>
                                </select>
                            </div>
                            <div class="contact">
                                <div class="input">
                                    <label>Contato</label>
                                    <input type="text" placeholder="Digite o Email" name="emailDono">
                                    <input type="text" placeholder="Digite o Telefone" name="telefoneDono">
                                    <input type="text" placeholder="Digite o Endereço" name="enderecoDono">
                                </div>
                            </div>
                        </div>
                        <button type="submit" class="btn-submit">Salvar e Continuar</button>
                </form>
            </div>
        </div>
        </div>